{
  "name": "explorer-manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/UrosVuj/Explorer-Manager.git"
  },
  "publisher": "UrosVujosevic",
  "displayName": "Explorer Manager",
  "description": "Quickly access important folders and files",
  "icon": "docs/icon.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "explorer",
    "folder",
    "manager",
    "file",
    "focus"
  ],
  "activationEvents": [
    "onView:explorer-manager",
    "onCommand:explorer-manager.selectItem"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "explorer-manager",
        "contents": "Right click and add a file or folder"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "explorer-manager",
          "name": "Explorer Manager"
        }
      ]
    },
    "commands": [
      {
        "command": "explorer-manager.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "explorer-manager.selectItem",
        "title": "Add to Explorer Manager"
      },
      {
        "command": "explorer-manager.removeItem",
        "title": "Remove from Explorer Manager",
        "icon": "$(close)"
      },
      {
        "command": "explorer-manager.removeAllItems",
        "title": "Remove All Items",
        "icon": "$(trash)"
      },
      {
        "command": "explorer-manager.cantRemoveItemMsg",
        "title": "Remove from Explorer Manager"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "explorer-manager.refreshEntry",
          "when": "view == explorer-manager",
          "group": "navigation"
        },
        {
          "command": "explorer-manager.removeAllItems",
          "when": "view == explorer-manager",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "explorer-manager.selectItem"
        }
      ],
      "view/item/context": [
        {
          "command": "explorer-manager.removeItem",
          "when": "view == explorer-manager && viewItem == directlySavedItem"
        },
        {
          "command": "explorer-manager.removeItem",
          "when": "view == explorer-manager && viewItem == directlySavedItem",
          "group": "inline"
        },
        {
          "command": "explorer-manager.cantRemoveItemMsg",
          "when": "view == explorer-manager && viewItem != directlySavedItem"
        }
      ]
    },
    "configuration": {
      "title": "Explorer Manager",
      "properties": {
        "explorer-manager.saveWorkspace": {
          "type": "boolean",
          "default": true,
          "description": "Save the current explorer view when closing VS Code"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.55.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
